{% extends 'layout.twig' %}

{% block title %}Connexion - Events Hint{% endblock %}

{% block content %}
    <link href="https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Manrope', sans-serif;
            background-color: #000000;
            color: #FFFFFF;
        }
        .title {
            font-family: 'Clash Display', sans-serif;
        }
        .hidden { display: none; }
    </style>

    <div class="min-h-screen bg-black flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h1 class="mt-6 text-center text-3xl font-extrabold title text-white">Events Hint</h1>
            <h2 class="mt-6 text-center text-3xl font-extrabold title text-white" id="form-title">
                Crée votre compte
            </h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white/10 py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <form id="signup-form" class="space-y-6" action="/register" method="POST">
                    <input type="hidden" name="csrf_token" value="{{ Csrftoken }}">

                    <div>
                        <label for="name" class="block text-sm font-medium text-white/80">
                            Nom
                        </label>
                        <div class="mt-1">
                            <input id="name" name="name" type="text" required
                                   class="appearance-none block w-full px-3 py-2 border border-white/10 rounded-md shadow-sm bg-black text-white focus:outline-none focus:ring-purple-500 focus:border-purple-500">
                        </div>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-white/80">
                            Email
                        </label>
                        <div class="mt-1">
                            <input id="signup-email" name="email" type="email" required
                                   class="appearance-none block w-full px-3 py-2 border border-white/10 rounded-md shadow-sm bg-black text-white focus:outline-none focus:ring-purple-500 focus:border-purple-500">
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-white/80">
                            Mot de passe
                        </label>
                        <div class="mt-1">
                            <input id="signup-password" name="password" type="password" required
                                   class="appearance-none block w-full px-3 py-2 border border-white/10 rounded-md shadow-sm bg-black text-white focus:outline-none focus:ring-purple-500 focus:border-purple-500">
                        </div>
                    </div>

                    <div>
                        <label for="role" class="block text-sm font-medium text-white/80">
                            Rôle
                        </label>
                        <div class="mt-1">
                            <select id="role" name="role" required
                                    class="block w-full px-3 py-2 border border-white/10 rounded-md bg-black text-white focus:outline-none focus:ring-purple-500 focus:border-purple-500">
                                <option value="organizer">Organisateur</option>
                                <option value="participant">Participant</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                            S'inscrire
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center text-sm">
                    <p class="text-white/70">
                        <a href="/login" id="toggle-form" class="font-medium text-purple-600 hover:text-purple-500">
                            Vous avez déja un compte ?
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
