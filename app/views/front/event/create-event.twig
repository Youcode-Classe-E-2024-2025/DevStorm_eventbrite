<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Créer un Événement | DevEvents</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-purple': '#8B5CF6',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-black text-white">
    <div class="min-h-screen">
        <!-- Navigation -->
{% include "layouts/nav.twig" %}  


        <!-- Main Content -->
        <div class="container mx-auto px-4 py-8 flex justify-center items-center min-h-screen">
        <div class="w-full max-w-4xl">
            <h1 class="text-3xl font-bold text-custom-purple mb-8">Créer un Nouvel Événement</h1>
            
            <form action="/organizer/event/create" method="POST" enctype="multipart/form-data" class="max-w-3xl space-y-6">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                
                <!-- Basic Information -->
                <div class="bg-gray-900 p-6 rounded-lg space-y-6">
                    <h2 class="text-xl font-semibold">Informations Générales</h2>
                    
                    <div>
                        <label class="block mb-2">Titre de l'événement *</label>
                        <input type="text" name="title" required 
                               class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:border-custom-purple">
                    </div>
                    
                    <div>
                        <label class="block mb-2">Description *</label>
                        <textarea name="description" required rows="4" 
                                  class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:border-custom-purple"></textarea>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block mb-2">Date *</label>
                            <input type="datetime-local" name="date" required 
                                   class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:border-custom-purple">
                        </div>
                        <div>
                            <label class="block mb-2">Lieu *</label>
                            <input type="text" name="location" required 
                                   class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:border-custom-purple">
                        </div>
                    </div>
                </div>
                
                <!-- Tickets & Capacity -->
                <div class="bg-gray-900 p-6 rounded-lg space-y-6">
                    <h2 class="text-xl font-semibold">Billets et Capacité</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                      
                        <div>
                            <label class="block mb-2">Catégorie *</label>
                            <select name="category_id" required 
                                    class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:border-custom-purple">
                                {% for category in categories %}
                                    <option value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div>
    <label class="block mb-2">Tags</label>
    <select name="tags[]" multiple 
            class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:border-custom-purple">
        {% for tag in tags %}
            <option value="{{ tag.id }}">{{ tag.name }}</option>
        {% endfor %}
    </select>
    <p class="text-sm text-gray-400 mt-1">Maintenez Ctrl (Cmd sur Mac) pour sélectionner plusieurs tags</p>
</div>

                </div>

<div class="bg-gray-900 p-6 rounded-lg space-y-6">
    <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold">Types de Billets</h2>
        <button type="button" onclick="addTicketType()" 
                class="px-4 py-2 bg-custom-purple text-white rounded-lg hover:bg-purple-700">
            <i class="fas fa-plus mr-2"></i>Ajouter un type
        </button>
    </div>
    
    <div id="ticket-types" class="space-y-4">
        <!-- Ticket types will be added here dynamically -->
    </div>
</div>

                
                <!-- Media -->
                <div class="bg-gray-900 p-6 rounded-lg space-y-6">
                    <h2 class="text-xl font-semibold">Médias</h2>
                    
            <div>
                <label for="image" class="block text-sm font-medium text-gray-300">Image de l'événement</label>
                <input type="file" id="image" name="image" accept="image/*" class="mt-1 block w-full text-sm text-gray-300
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-semibold
                    file:bg-custom-purple file:text-white
                    hover:file:bg-purple-700">
            </div>
            
            <div>
                <label for="video" class="block text-sm font-medium text-gray-300">Vidéo promotionnelle</label>
                <input type="file" id="video" name="video" accept="video/*" class="mt-1 block w-full text-sm text-gray-300
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-semibold
                    file:bg-custom-purple file:text-white
                    hover:file:bg-purple-700">
            </div>

                </div>
                
                <!-- Submit -->
                <div class="flex justify-end space-x-4">
                    <a href="/organizer/dashboard" 
                       class="px-6 py-2 border border-custom-purple text-custom-purple rounded-lg hover:bg-custom-purple hover:text-white">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="px-6 py-2 bg-custom-purple text-white rounded-lg hover:bg-purple-700">
                        Créer l'événement
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript for form validation -->
<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        const title = document.querySelector('input[name="title"]').value;
        const date = document.querySelector('input[name="date"]').value;
        let totalTickets = 0;

        // Calculate total tickets across all types
        document.querySelectorAll('input[name$="[quantity]"]').forEach(input => {
            totalTickets += parseInt(input.value || 0);
        });

        if (!title || !date || totalTickets === 0) {
            e.preventDefault();
            alert('Veuillez remplir tous les champs obligatoires et ajouter au moins un type de billet.');
        }
    });



   let ticketTypeCount = 0;

function addTicketType() {
    const template = `
        <div class="ticket-type bg-gray-800 p-4 rounded-lg">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block mb-2">Type de Billet</label>
                    <select name="ticket_types[${ticketTypeCount}][type]" 
                            onchange="togglePriceField(this)"
                            class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg">
                        <option value="gratuit">Gratuit</option>
                        <option value="payant">Standard</option>
                        <option value="VIP">VIP</option>
                        <option value="early_bird">Early Bird</option>
                    </select>
                </div>
                
                <div class="price-field">
                    <label class="block mb-2">Prix (€)</label>
                    <input type="number" step="0.01" min="0" 
                           name="ticket_types[${ticketTypeCount}][price]"
                           class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg">
                </div>
                
                <div>
                    <label class="block mb-2">Quantité</label>
                    <input type="number" min="1" 
                           name="ticket_types[${ticketTypeCount}][quantity]"
                           class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg">
                </div>
            </div>
            
            <button type="button" onclick="removeTicketType(this)" 
                    class="mt-4 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                Supprimer
            </button>
        </div>
    `;
    
    document.getElementById('ticket-types').insertAdjacentHTML('beforeend', template);
    ticketTypeCount++;
}

function togglePriceField(select) {
    const priceField = select.closest('.ticket-type').querySelector('.price-field');
    const priceInput = priceField.querySelector('input');
    
    if (select.value === 'gratuit') {
        priceField.style.display = 'none';
        priceInput.value = 0;
    } else {
        priceField.style.display = 'block';
        priceInput.value = '';
    }
}

function removeTicketType(button) {
    button.closest('.ticket-type').remove();
}

document.addEventListener('DOMContentLoaded', () => {
    addTicketType();
});

</script>

</body>
</html>
