<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DevEvents - Plateforme d'événements</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-purple': '#8B5CF6',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-black text-white">
    <!-- Navigation -->
    <nav class="border-b border-white/10 bg-black">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <a href="/" class="text-2xl font-bold text-custom-purple">DevEvents</a>
                <div class="space-x-4">
                    <a href="/login" class="text-white hover:text-custom-purple">Connexion</a>
                    <a href="/register" class="bg-custom-purple text-white px-4 py-2 rounded-lg hover:bg-purple-700">Inscription</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-black">
        <div class="absolute inset-0 bg-gradient-to-br from-custom-purple/20 to-transparent"></div>
        <div class="container mx-auto px-4 py-20">
            <div class="max-w-3xl">
                <h1 class="text-5xl font-bold mb-6">Découvrez des événements <span class="text-custom-purple">exceptionnels</span></h1>
                <div class="flex gap-4">
                    <input type="text" class="w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:border-custom-purple" placeholder="Rechercher un événement">
                    <button class="bg-custom-purple px-8 py-3 rounded-lg hover:bg-purple-700">Rechercher</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Events -->
    <div class="container mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold mb-8">Événements à la une</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for event in events %}
                <div class="bg-gray-900 rounded-lg overflow-hidden">
                    <img src="{{ event.image_url|default('https://picsum.photos/400/200') }}" class="w-full h-48 object-cover" alt="{{ event.title }}">
                    <div class="p-6">
                        <span class="bg-custom-purple text-white px-3 py-1 rounded-full text-sm">{{ event.category_name }}</span>
                        <h3 class="text-xl font-bold mt-4">{{ event.title }}</h3>
                        <p class="text-gray-400 mt-2">{{ event.date|date('d M Y • H:i') }}</p>
                        <div class="flex justify-between items-center mt-6">
                            <span class="text-custom-purple font-bold">{{ event.price }} €</span>
                            <a href="/event/{{ event.id }}" class="border border-custom-purple text-custom-purple px-4 py-2 rounded-lg hover:bg-custom-purple hover:text-white">Réserver</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Categories -->
    <div class="bg-gray-900 py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-8">Catégories</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                {% for category in categories %}
                    <a href="/category/{{ category.id }}" class="bg-black p-6 rounded-lg text-center hover:border-custom-purple border-2 border-transparent">
                        <h3 class="font-bold">{{ category.name }}</h3>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</body>
</html>
